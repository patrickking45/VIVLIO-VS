@model VIVLIO.OFFER

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="offerDetailsWrapper">

    <div class="boxWrapper">
        <div class="navigation">
            <div class="back">
                @if (Model.OFFERID != 1)
                {
                    @Html.ActionLink("<", "GetLastRow", new { id = Model.OFFERID })
                }
            </div>
            <div class="next">
                @Html.ActionLink(">", "GetNextRow", new { id = Model.OFFERID })
            </div>
        </div>
        <div class="infoWrapper">
            <div class="displayImage">
                @if (Model.PICTURE != null)
            {
                    <img src="@Url.Content("~/Content/Images/OffersImage/" + Model.PICTURE)" />
                }
                else {
                    <img src="@Url.Content("~/Content/Images/OffersImage/" + "noImage.png")" />
                }
            </div>
            <div class="info">
                <h2 class="title">@Html.DisplayFor(model => model.NAME)</h2>
                <p class="author">De: @Html.DisplayFor(model => model.AUTHOR_COMPANYNAME)</p>
                <p class="desc">@Html.DisplayFor(model => model.DESCRIPTION)</p>
                <p class="condition">Condition: @Html.DisplayFor(model => model.CONDITION)</p>
                <p class="matiere">Matière: @Html.DisplayFor(model => model.MATIERE.SUBJECTMATTER)</p>
                <p class="niveau">Niveau: @Html.DisplayFor(model => model.NIVEAU.NIVEAUNAME)</p>
                <p class="posted">Publié le: @Html.DisplayFor(model => model.POSTEDDATE)</p>
                <p class="seleer">Vendu par: @Html.ActionLink(Model.Users.Prenom + " " + Model.Users.Name, "Contact", "Users", new { id = Model.USERID }, null)</p>
                <p class="price">@Html.DisplayFor(model => model.PRICE) $</p>
            </div>
        </div>
        <p class="backtolist">
            @Html.ActionLink("Back to List", "Index")

        </p>
</div>
</div>
